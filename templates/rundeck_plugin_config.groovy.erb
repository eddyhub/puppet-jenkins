import hudson.model.*
import hudson.slaves.*
import jenkins.model.*
import jenkins.slaves.*
import net.sf.json.*
import org.jenkinsci.plugins.rundeck.RundeckNotifier
////////////////////////////////////////////////////////////////////////////////
// Header for log
////////////////////////////////////////////////////////////////////////////////
println("########## START: configuring rundeck plugin ##########")
////////////////////////////////////////////////////////////////////////////////

class JenkinsRundeckPlugin {
  def json = new JSONObject()
  def jenkinsInstance = Jenkins.getInstance();
  def rundeckInstance = jenkinsInstance.getDescriptor("org.jenkinsci.plugins.rundeck.RundeckNotifier")
  def stdout = System.out

  public JenkinsRundeckPlugin() {
 ////////////////////////////////////////////////////////////////////////////////
  // defines which puppet provides
  ////////////////////////////////////////////////////////////////////////////////
  json.put('url', '<%= @rundeck_url %>')
  <% if @login != nil %>
  json.put('login', '<%= @login %>')
  json.put('password', '<%= @password %>')
  <% else %>
  json.put('authtoken', '<%= @authtoken %>')
  <% end %>
  json.put('apiversion', '<%= @api_version %>')
  ////////////////////////////////////////////////////////////////////////////////

  }

  public void create() {
    rundeckInstance.configure(null, json)
    save()
  }

  private save() {
    jenkinsInstance.save()
  }
}

def rundeck = new JenkinsRundeckPlugin()
rundeck.create()
////////////////////////////////////////////////////////////////////////////////
// Footer for log
////////////////////////////////////////////////////////////////////////////////
println("########## END: configuring rundeck plugin ##########")
