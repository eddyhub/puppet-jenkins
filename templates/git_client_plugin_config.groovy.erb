class JenkinsGitClientPlugin {
  def jenkinsInstance = Jenkins.getInstance();
  def gitClientInstance = jenkinsInstance.getDescriptor("hudson.plugins.git.GitTool")
  def stdout = System.out
  def gitTool = "<% @git_tool %>"

  public JenkinsGitClientPlugin() {
    //////////////////////////////////////////////////////////////////////////////
    // defines which puppet provides
    //////////////////////////////////////////////////////////////////////////////
    gitTool = "<%= @git_tool %>"
      //////////////////////////////////////////////////////////////////////////////

  }

  public void create() {
    GitTool[] tool = null
    if(gitTool == 'jgit') { tool = [new JGitTool()] }
    else { tool = [new GitTool(GitTool.DEFAULT, gitTool, null)]}
    gitClientInstance.setInstallations(tool)
    save()
  }

  private save() {
    gitClientInstance.save()
    jenkinsInstance.save()
  }
}

def pluginConfig = new JenkinsGitClientPlugin()
pluginConfig.create()
