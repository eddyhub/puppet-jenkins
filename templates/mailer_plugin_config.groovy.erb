class JenkinsMailerPlugin {
  ////////////////////////////////////////////////////////////////////////////////
  // defines which puppet provides
  ////////////////////////////////////////////////////////////////////////////////
  def defaultSuffix = "<%= @default_suffix %>"
  def hudsonUrl = "<%= @hudson_url%>"
  //def adminAddress    = "<%= @admin_address %>"
  def useSsl = <%= @use_ssl %>
  def charset = "<%= @charset %>"
  def replyToAddress = "<%= @reply_to_address%>"
  def smtpHost = "<%= @smtp_host %>"
  def smtpPort = "<%= @smtp_port %>"
  ////////////////////////////////////////////////////////////////////////////////

  def jenkinsInstance = Jenkins.getInstance();
  def mailerInstance = jenkinsInstance.getDescriptor("hudson.tasks.Mailer")
  def stdout = System.out

  public JenkinsMailerPlugin() {
  }

  public void create() {
    mailerInstance.setDefaultSuffix(defaultSuffix)
    mailerInstance.setHudsonUrl(hudsonUrl)
    //    mailerInstance.setAdminAddress(adminAddress)
    mailerInstance.setUseSsl(useSsl)
    mailerInstance.setCharset(charset)
    mailerInstance.setReplyToAddress(replyToAddress)
    mailerInstance.setSmtpHost(smtpHost)
    mailerInstance.setSmtpPort(smtpPort)
    save()
  }

  private save() {
    jenkinsInstance.save()
  }
}

def mailer = new JenkinsMailerPlugin()
mailer.create()
